	<!-- localization  -->
	<include file="$(find maqui_bringup)/launch/localization/localization.launch">
		<!-- <arg name="type" value="odometry"> -->
		<arg name="type" value="amcl"/>
	</include>


	<!-- ================================== -->
	<!-- ==           KNOWLEDGE          == -->
	<!-- ================================== -->
	

