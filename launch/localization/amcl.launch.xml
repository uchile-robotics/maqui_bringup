<launch>

	<node pkg="amcl" type="amcl" name="amcl" respawn="true" output="screen" ns="/maqui/nav/">
		<remap from="scan" to="amcl/scan"/>
		<remap from="map" to="/map"/>
		<rosparam file="$(find maqui_bringup)/config/localization/amcl.yaml" command="load"/>
	</node>

	<!-- rgbd_depth -->
	<!-- <node pkg="topic_tools" type="relay" name="amcl_scan_front_relay" ns="/maqui/nav/" args="/pepper_robot/camera/scan /maqui/nav/amcl/scan"/> -->

	<!-- laser_rear relay -->
	<node pkg="topic_tools" type="relay" name="amcl_scan_rear_relay" ns="/maqui/nav/" args="/pepper_robot/laser /maqui/nav/amcl/scan"/>

</launch>
